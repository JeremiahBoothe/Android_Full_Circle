<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@+id/navigation_home">

    <fragment
            android:id="@+id/navigation_home"
            android:name="com.armstrongindustries.jbradio.ui.home.HomeFragment"
            android:label="@string/title_home"
            tools:layout="@layout/fragment_home" />

    <fragment
            android:id="@+id/navigation_dashboard"
            android:name="com.armstrongindustries.jbradio.ui.dashboard.DashboardFragment"
            android:label="@string/title_dashboard"
            tools:layout="@layout/fragment_dashboard" />

    <fragment
            android:id="@+id/navigation_song"
            android:name="com.armstrongindustries.jbradio.ui.history.SongFragment"
            android:label="@string/title_history"
            tools:layout="@layout/fragment_song_list">

        <!-- Define the action to navigate to songDetailFragment -->
        <action
                android:id="@+id/action_songList_to_songDetail"
                app:destination="@id/songDetailFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@animator/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
            android:id="@+id/songDetailFragment"
            android:name="com.armstrongindustries.jbradio.ui.history.SongDetailFragment"
            android:label="Song Detail"
            tools:layout="@layout/fragment_song_detail">

        <!-- Ensure back navigation works properly -->
        <action
                android:id="@+id/action_songDetail_to_songList"
                app:destination="@id/navigation_song"
                app:popUpTo="@id/navigation_song"
                app:popUpToInclusive="true"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
</navigation>
